<% form_for(@book, :validations => { :options => { :onkeyup => false } }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :volume %><br />
    <%= f.text_field :volume %>
  </p>
  <p>
    <%= f.submit submit_label %>
  </p>
<% end %>
